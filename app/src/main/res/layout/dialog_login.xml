<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录教务系统"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/dialog_title_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_school_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选择学校"
                    android:textSize="16sp"
                    android:textColor="@color/edit_text_tip_color"
                    android:background="@drawable/edit_text_background"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="48dp"
                    android:paddingBottom="12dp"
                    android:clickable="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:id="@+id/iv_school_dropdown"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_dropdown_arrow"
                    android:contentDescription="学校下拉列表" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="学号"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@+id/et_password"
                    android:background="@drawable/edit_text_background"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="48dp"
                    android:paddingBottom="12dp"
                    android:textColorHint="@color/edit_text_tip_color"
                    android:textColor="@color/edit_text_color"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:id="@+id/iv_account_dropdown"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_dropdown_arrow"
                    android:contentDescription="账号下拉列表"
                    android:clickable="true"
                    android:focusable="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="密码"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:imeOptions="actionGo"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="48dp"
                    android:paddingBottom="12dp"
                    android:textColorHint="@color/edit_text_tip_color"
                    android:textColor="@color/edit_text_color"
                    android:background="@drawable/edit_text_background"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:id="@+id/iv_password_toggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_eye_closed"
                    android:contentDescription="密码可见性切换"
                    android:clickable="true"
                    android:focusable="true" />

            </RelativeLayout>
            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="忘记密码"
                android:textSize="16sp"
                android:textColor="@color/edit_text_tip_color"
                android:clickable="true" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="@color/button_text_color"
        android:background="@drawable/button_background_suggest"
        android:layout_marginTop="20dp" />

</LinearLayout>