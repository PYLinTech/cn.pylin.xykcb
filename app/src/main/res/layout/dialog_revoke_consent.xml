<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认撤销？"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/dialog_title_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="如果您撤销同意\n《小雨课程表用户协议》\n《小雨课程表隐私政策》\n将清除本应用的所有数据并退出，\n是否继续？"
                android:textColor="@color/info_text_color"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_confirm_revoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="确认撤销"
        android:textSize="18sp"
        android:background="@drawable/button_background_oppose"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_cancel_revoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="取消"
        android:textSize="18sp"
        android:background="@drawable/button_background_neutral"
        android:textColor="@color/white"/>

</LinearLayout>