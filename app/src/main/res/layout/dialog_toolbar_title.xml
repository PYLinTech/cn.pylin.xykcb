<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小雨课程表"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/dialog_title_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_tab_mine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tag_button_selected"
                    android:text="我的"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_tab_settings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/tag_button_normal"
                    android:text="设置"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_tab_about"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tag_button_normal"
                    android:text="关于"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录信息："
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/info_title_color"
                        android:layout_marginBottom="10dp" />

                    <!-- 登录信息统一背景容器 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/edit_text_background">

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="学号：获取失败"
                            android:textColor="@color/info_text_color"
                            android:textSize="16sp"
                            android:padding="12dp" />

                        <!-- 用户信息显示区域 -->
                        <LinearLayout
                            android:id="@+id/layout_user_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="姓名：获取失败"
                                android:textColor="@color/info_text_color"
                                android:textSize="16sp"
                                android:padding="12dp" />

                            <TextView
                                android:id="@+id/tv_academy_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="学院：获取失败"
                                android:textColor="@color/info_text_color"
                                android:textSize="16sp"
                                android:padding="12dp" />

                            <TextView
                                android:id="@+id/tv_class_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="班级：获取失败"
                                android:textColor="@color/info_text_color"
                                android:textSize="16sp"
                                android:padding="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_reLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="重新登录"
                        android:textSize="18sp"
                        android:textColor="@color/button_text_color"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注栏："
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/info_title_color"
                        android:layout_marginBottom="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_text_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="显示备注栏"
                            android:textSize="16sp"
                            android:textColor="@color/info_text_color"
                            android:padding="12dp" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <Switch
                            android:id="@+id/switch_note_visibility_toggle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="10dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课程提醒："
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/info_title_color"
                        android:layout_marginBottom="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/edit_text_background">

                        <!-- 明日课程提醒开关 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="明日课程提醒"
                                android:textSize="16sp"
                                android:textColor="@color/info_text_color"
                                android:padding="12dp" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                            <Switch
                                android:id="@+id/switch_daily_course_reminder"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:padding="10dp" />
                        </LinearLayout>

                        <!-- 提醒时间选择 -->
                        <LinearLayout
                            android:id="@+id/layout_notification_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="提醒时间"
                                android:textSize="16sp"
                                android:textColor="@color/info_text_color"
                                android:padding="12dp" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                            <TextView
                                android:id="@+id/tv_notification_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22:00"
                                android:textSize="16sp"
                                android:textColor="@color/info_text_color"
                                android:padding="12dp" />
                        </LinearLayout>

                        <!-- 小组件警告 -->
                        <TextView
                            android:id="@+id/tv_widget_warning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="桌面没有添加小组件，提醒将不能正常推送！"
                            android:textSize="12sp"
                            android:textColor="@color/red"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp"
                            android:gravity="center"
                            android:clickable="false"
                            android:focusable="false"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="应用信息："
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/info_title_color"
                        android:layout_marginBottom="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/edit_text_background">

                        <TextView
                            android:id="@+id/tvVersionInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="版本号：获取失败"
                            android:textColor="@color/info_text_color"
                            android:textSize="16sp"
                            android:padding="12dp" />

                        <TextView
                            android:id="@+id/tvICPInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="备案号：渝ICP备2025049527号-2A"
                            android:textColor="@color/info_text_color"
                            android:textSize="16sp"
                            android:padding="12dp" />
                            
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="版权方：重庆沛雨霖科技有限公司"
                            android:textColor="@color/info_text_color"
                            android:textSize="16sp"
                            android:padding="12dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他："
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/info_title_color"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp" />
                        
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/edit_text_background">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="同意用户协议及隐私政策"
                                android:textSize="16sp"
                                android:textColor="@color/info_text_color"
                                android:padding="12dp" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                            <Switch
                                android:id="@+id/switch_privacy_policy_consent"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:checked="true" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/btn_show_welcome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="查看介绍页面"
                            android:textSize="16sp"
                            android:textColor="@color/info_text_color"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/btn_join_qq_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="加入QQ交流群"
                            android:textSize="16sp"
                            android:textColor="@color/info_text_color"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_PYLinTech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="进入官网"
                        android:textSize="18sp"
                        android:textColor="@color/button_text_color"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:id="@+id/btn_check_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="检查版本更新"
                        android:textSize="18sp"
                        android:textColor="@color/button_text_color"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>